{
  "storage": {
    "base_path": "./data",
    "raw_path": "./data/raw",
    "processed_path": "./data/processed", 
    "categorized_path": "./data/categorized",
    "metadata_path": "./data/metadata"
  },
  
  "scrapers": {
    "generic": {
      "enabled": true,
      "user_agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/122.0.0.0 Safari/537.36",
      "delay_range": [2, 5],
      "max_retries": 3,
      "timeout": 30,
      "headers": {
        "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,image/avif,image/webp,*/*;q=0.8",
        "Accept-Language": "en-US,en;q=0.5",
        "Accept-Encoding": "gzip, deflate, br",
        "Cache-Control": "no-cache",
        "Pragma": "no-cache"
      }
    },
    
    "pornpics": {
      "enabled": true,
      "base_url": "https://www.pornpics.com/",
      "user_agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/122.0.0.0 Safari/537.36",
      "delay_range": [3, 7],
      "max_retries": 5,
      "timeout": 45,
      "image_selectors": [
        ".gallery-item img",
        ".photo img", 
        ".thumb img",
        "[data-src]"
      ],
      "quality_filters": {
        "min_width": 1200,
        "min_height": 800,
        "skip_thumbnails": true,
        "prefer_high_res": true
      },
      "headers": {
        "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,image/avif,image/webp,*/*;q=0.8",
        "Accept-Language": "en-US,en;q=0.5",
        "Referer": "https://www.pornpics.com/",
        "Cache-Control": "no-cache"
      }
    },
    
    "playwright": {
      "enabled": true,
      "browser": "chromium",
      "headless": true,
      "viewport": {
        "width": 1920,
        "height": 1080
      },
      "user_agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/122.0.0.0 Safari/537.36",
      "locale": "en-US",
      "timezone": "America/New_York",
      "geolocation": null,
      "permissions": ["geolocation"],
      "color_scheme": "no-preference",
      "request_delay_ms": 2000,
      "random_delay_variance": 1000,
      "max_concurrent_requests": 3,
      "respect_robots_txt": true,
      "bypass_age_verification": true,
      "handle_cookie_banners": true,
      "wait_for_dynamic_content": true,
      "scroll_for_lazy_load": true,
      "persistent_context": true,
      "user_data_dir": null,
      "storage_state": null
    }
  },
  
  "image_quality": {
    "min_width": 800,
    "min_height": 600,
    "max_file_size_mb": 50,
    "allowed_formats": ["jpg", "jpeg", "png", "webp"],
    "skip_thumbnails": true,
    "skip_previews": true,
    "quality_keywords": ["original", "full", "large", "hd", "high"],
    "low_quality_keywords": ["thumb", "preview", "small", "mini", "tiny"]
  },
  
  "face_detection": {
    "enabled": true,
    "model": "hog",
    "face_threshold": 0.6,
    "num_jitters": 1,
    "face_encodings_model": "large"
  },
  
  "categorization": {
    "min_confidence": 0.8,
    "max_distance": 0.6,
    "create_unknown_category": true,
    "min_faces_per_person": 3,
    "use_clustering": true,
    "clustering_method": "dbscan"
  },
  
  "legal": {
    "require_robots_check": true,
    "user_agent": "MCP-WebScraper/1.0",
    "respect_crawl_delay": true,
    "check_terms_of_service": true,
    "attribution_required": true,
    "blocked_domains": [
      "instagram.com",
      "facebook.com", 
      "twitter.com",
      "x.com"
    ]
  },
  
  "performance": {
    "max_concurrent_downloads": 5,
    "download_timeout": 120,
    "retry_delays": [1, 3, 5, 10],
    "batch_size": 20,
    "memory_limit_mb": 2048
  },
  
  "logging": {
    "level": "INFO",
    "file": "./logs/scraper.log",
    "max_file_size_mb": 100,
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  
  "metadata": {
    "save_metadata": true,
    "include_exif": true,
    "include_face_locations": true,
    "include_quality_scores": true,
    "include_source_info": true,
    "metadata_format": "json"
  },
  
  "adult_content": {
    "age_verification_selectors": [
      "button:has-text('I am 18')",
      "button:has-text('Yes')",
      "button:has-text('Enter')",
      "button:has-text('Continue')",
      "button:has-text('Agree')",
      ".age-verify button",
      ".modal-age button",
      "#age-gate button",
      "[data-age-verify] button"
    ],
    "cookie_banner_selectors": [
      "button:has-text('Accept')",
      "button:has-text('OK')",
      "button:has-text('Got it')",
      ".cookie-banner button",
      "#cookie-banner button"
    ],
    "model_name_selectors": [
      "h1.model-name",
      ".performer-name",
      ".model-title", 
      "h1:contains('Model:')",
      ".page-title .model",
      "[data-model-name]"
    ],
    "tag_selectors": [
      ".tags a",
      ".tag-list .tag",
      ".categories a", 
      ".keywords .keyword"
    ]
  },
  
  "sites": {
    "pornpics.com": {
      "gallery_selectors": [
        ".gallery-item img",
        ".photo-container img",
        ".image-gallery img", 
        ".thumb img"
      ],
      "high_res_attributes": [
        "data-original",
        "data-full",
        "data-large",
        "data-src"
      ],
      "pagination_selector": ".pagination a",
      "model_name_selector": "h1.model-name, .performer-name",
      "scroll_strategy": "lazy_load",
      "wait_after_scroll": 1000
    }
  }
}
