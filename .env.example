# Example Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# =============================================================================
# JINA AI CONFIGURATION
# =============================================================================
# Get your API key from: https://jina.ai
JINA_API_KEY=your_jina_api_key_here
JINA_BASE_URL=https://eu-s-beta.jina.ai

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
# Server settings
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000
MCP_SERVER_DEBUG=false

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Base paths for data storage
DATA_BASE_PATH=./data
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
CATEGORIZED_DATA_PATH=./data/categorized
METADATA_PATH=./data/metadata
RESEARCH_PATH=./data/research

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================
# Rate limiting and behavior
MAX_CONCURRENT_REQUESTS=5
REQUEST_DELAY_MS=1000
USER_AGENT=MCP-WebScraper-Professional/1.0

# Image quality settings
MIN_IMAGE_WIDTH=800
MIN_IMAGE_HEIGHT=600
MAX_FILE_SIZE_MB=10

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
# Face detection settings
FACE_DETECTION_CONFIDENCE=0.6
PERSON_IDENTIFICATION_CONFIDENCE=0.8
ENABLE_FACE_LEARNING=true

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================
# Legal compliance settings
REQUIRE_ROBOTS_CHECK=true
RESPECT_RATE_LIMITS=true
ENABLE_TOS_CHECKING=true

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Logging configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/scraper.log
ENABLE_STATISTICS=true

# =============================================================================
# DATABASE CONFIGURATION (Optional)
# =============================================================================
# If using database storage
# DATABASE_URL=sqlite:///./scraper.db
# DATABASE_POOL_SIZE=10
